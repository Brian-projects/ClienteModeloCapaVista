<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" />
    <link href="~/Content/Hamburguer.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <section class="container-fluid">
        <div class="row ">
            <section class="col-12">
                <div class="row">
                    <div class="col-12 col-md-2 shadow">
                        <ul class="nav justify-content-center vh-100 text-center d-none d-md-block">
                            <li class="col-auto">
                                <a class="navbar-link text-center p-3" href="/Cliente/ListadoClientes">Cliente</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-12 col-md-10">
                        <div class="container">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/ApplicationScripts/ClienteScripts.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
